List<ConstitutionDetail> loanTier = new ArrayList<>();
            for (ConstitutionLoanExtra tier : constitution.getConstitutionLoanExtras()) {
                loanTier.add(new ConstitutionDetail("Tier:" + String.valueOf(tier.getTier()), "Max Amount:" + NumberUtils.formatCurrency(tier.getMaxAmount()) + "  " + "  " + "  Form Fees:" + NumberUtils.formatCurrency(tier.getFormFee())));
            }
            constitutionDetails.add(new ConstitutionSummary(R.string.loan_tier_caption, loanTier, ConstitutionSetupActivity.Step.LOANS_TIER, true));